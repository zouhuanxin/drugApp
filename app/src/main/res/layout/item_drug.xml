<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/group"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drag_edge="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/delect"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="#FF0000"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="删除" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="#4678ff"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="编辑" />
            </LinearLayout>

            <LinearLayout
                android:gravity="left"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:orientation="horizontal">

                <com.kproduce.roundcorners.RoundTextView
                    android:id="@+id/tag"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:rRadius="@dimen/dp_500"
                    android:background="#ff0000"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16">
                </com.kproduce.roundcorners.RoundTextView>

                <com.kproduce.roundcorners.RoundImageView
                    android:id="@+id/image"
                    app:rRadius="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80">
                </com.kproduce.roundcorners.RoundImageView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:text="药物名称"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30">
                    </TextView>

                    <TextView
                        android:id="@+id/desc"
                        android:text="药物介绍"
                        android:gravity="start"
                        android:padding="@dimen/dp_10"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/createdtime"
                        android:text="药物生产日期"
                        android:gravity="center|right"
                        android:textSize="@dimen/sp_12"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20">
                    </TextView>

                    <TextView
                        android:id="@+id/remindtime"
                        android:text="提醒服药时间"
                        android:textColor="#ff0000"
                        android:gravity="center|right"
                        android:textSize="@dimen/sp_12"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </com.daimajia.swipe.SwipeLayout>

        <TextView
            android:id="@+id/adddrug"
            android:visibility="gone"
            android:text="添加一个提醒吧"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80">
        </TextView>
    </FrameLayout>

</androidx.cardview.widget.CardView>